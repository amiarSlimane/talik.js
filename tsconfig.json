{
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "./dist/types",
      "module": "CommonJS",
      "target": "es6",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "include": ["src/lib"],
    "exclude": ["src/lib/**/tests"],
}